<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:layout_marginBottom="16dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary">


        <ImageView
            android:id="@+id/iv_gender"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            tools:src="@drawable/male_doctor1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_physician_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/museo_sans_rounded700"
                android:gravity="center_vertical"
                android:text="Physician's Name:"/>

            <TextView
                android:id="@+id/tv_physician_occupation_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/museo_sans_rounded700"
                android:gravity="center_vertical"
                android:text="Occupation:"/>

            <TextView
                android:id="@+id/tv_patient_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/museo_sans_rounded700"
                android:gravity="center_vertical"
                android:text="Patient's Name:"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_physician_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/museo_slab300"
                android:gravity="center_vertical"
                tools:text="John Smith"/>

            <TextView
                android:id="@+id/tv_physician_occupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/museo_slab300"
                android:gravity="center_vertical"
                tools:text="Cardiologist"/>

            <TextView
                android:id="@+id/tv_patient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/museo_slab300"
                android:gravity="center_vertical"
                tools:text="Jimmy"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/bv_arrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24" />

    </LinearLayout>

</androidx.cardview.widget.CardView>